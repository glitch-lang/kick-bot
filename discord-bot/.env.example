# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Kick Bot API URL
KICK_BOT_API_URL=https://web-production-56232.up.railway.app

# Public URL for Watch Parties
# Use ngrok, Cloudflare Tunnel, Railway, or your VPS URL
# Examples:
#   PUBLIC_URL=https://abc123.ngrok-free.app
#   PUBLIC_URL=https://watchparty.yourdomain.com
#   PUBLIC_URL=https://your-app.railway.app
#   PUBLIC_URL=http://localhost:3001 (default - only works locally)
PUBLIC_URL=http://localhost:3001

# LocalTunnel Configuration (OPTIONAL - for automatic public access)
# Set to 'true' to automatically create a public URL when bot starts
# This eliminates the need to manually run 'lt --port 3001'
ENABLE_TUNNEL=false

# Optional: Custom subdomain for LocalTunnel
# Example: TUNNEL_SUBDOMAIN=myparty â†’ https://myparty.loca.lt
# Warning: Subdomain may not always be available
TUNNEL_SUBDOMAIN=

# Kick OAuth Configuration (OPTIONAL - for Kick login feature)
# To get these credentials, register your app at: https://kick.com/developer/applications
# Leave blank to disable OAuth login feature
KICK_OAUTH_CLIENT_ID=
KICK_OAUTH_CLIENT_SECRET=
KICK_OAUTH_REDIRECT_URI=http://localhost:3001/auth/callback

# Security Keys (REQUIRED if OAuth is enabled)
# Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Keep these secret! Never commit to git!
SESSION_SECRET=
ENCRYPTION_KEY=
